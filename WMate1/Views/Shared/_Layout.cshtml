@using WMate1.Models
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - WayMate</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="~/autoroad/https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800&display=swap" rel="stylesheet">
    <link rel="icon" href="~/images/orgilogo.png" type="image/x-icon">
    <link rel="stylesheet" href="~/autoroad/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/autoroad/css/animate.css">
    
    <link rel="stylesheet" href="~/autoroad/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/autoroad/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/autoroad/css/magnific-popup.css">

    <link rel="stylesheet" href="~/autoroad/css/aos.css">

    <link rel="stylesheet" href="~/autoroad/css/ionicons.min.css">

    <link rel="stylesheet" href="~/autoroad/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/autoroad/css/jquery.timepicker.css">


    <link rel="stylesheet" href="~/autoroad/css/flaticon.css">
    <link rel="stylesheet" href="~/autoroad/css/icomoon.css">
    <link rel="stylesheet" href="~/autoroad/css/style.css">
</head>
<body>
    @{
        UserCredential user = null;
        if (Session["Login"] != null)
        {
            user = Session["Login"] as UserCredential;

        }

    }
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
            <div class="container">
                <a class="navbar-brand" href="/Home/Index">Way<span>Mate</span></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="oi oi-menu"></span> Menu
                </button>

                <div class="collapse navbar-collapse" id="ftco-nav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active"><a href="/Home/Index" class="nav-link">Home</a></li>
                        <li class="nav-item"><a href="/Home/About" class="nav-link">About</a></li>
                        <li class="nav-item"><a href="/Home/Trips" class="nav-link">Trips</a></li>
                        <li class="nav-item"><a href="/Home/Contact" class="nav-link">Contact</a></li>
                        @if (user == null)
                        {
                            <li class="nav-item"><a href="/Home/Register" class="nav-link">Register</a></li>
                            <li class="nav-item"><a href="/Home/Login" class="nav-link">Login</a></li>
                        }
                        @if (user != null)
                        {

                            <li class="nav-item"><a href="/Home/ShowProfile" class="nav-link">@user.UserName</a></li>
                            <li class="nav-item"><a href="/Home/Logout" class="nav-link">Log Out</a></li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>

    <footer class="ftco-footer ftco-bg-dark ftco-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">About WayMate</h2>
                        <p>WayMate is the leading carpooling app in the Northern  Cyprus. Forget going into the city to get out of town. We connect people together, making it possible to travel literally anywhere, directly.</p>
                        <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                            <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                            <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                            <li class="ftco-animate"><a href="https://instagram.com/waymate.cyprus?igshid=jhp1nuxa4heq"><span class="icon-instagram"></span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4 ml-md-5">
                        <h2 class="ftco-heading-2">Information</h2>
                        <ul class="list-unstyled">
                            <li><a href="/Home/About" class="py-2 d-block">About</a></li>
                            <li><a href="#" class="py-2 d-block">Services</a></li>
                            <li><a href="#" class="py-2 d-block">Term and Conditions</a></li>
                            <li><a href="#" class="py-2 d-block">Best Price Guarantee</a></li>
                            <li><a href="#" class="py-2 d-block">Privacy &amp; Cookies Policy</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Customer Support</h2>
                        <ul class="list-unstyled">
                            <li><a href="#" class="py-2 d-block">FAQ</a></li>
                            <li><a href="#" class="py-2 d-block">Payment Option</a></li>
                            <li><a href="#" class="py-2 d-block">Booking Tips</a></li>
                            <li><a href="#" class="py-2 d-block">How it works</a></li>
                            <li><a href="/Home/Contact" class="py-2 d-block">Contact Us</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Have a Questions?</h2>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">Kalkanlı, Guzelyurt District, Turkish Republic of Northern Cyprus</span></li>
                                <li><a href="https://www.instagram.com/waymate.cyprus/"><span class="icon icon-instagram"></span><span class="text">waymate.cyprus</span></a></li>
                                <li><a href="mailto:waymatecyprus@gmail.com"><span class="icon icon-envelope"></span><span class="text">waymatecyprus@gmail.com</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">

                    <p>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart color-danger" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </p>
                </div>
            </div>
        </div>
    </footer>


    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


    <script src="~/autoroad/js/jquery.min.js"></script>
    <script src="~/autoroad/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/autoroad/js/popper.min.js"></script>
    <script src="~/autoroad/js/bootstrap.min.js"></script>
    <script src="~/autoroad/js/jquery.easing.1.3.js"></script>
    <script src="~/autoroad/js/jquery.waypoints.min.js"></script>
    <script src="~/autoroad/js/jquery.stellar.min.js"></script>
    <script src="~/autoroad/js/owl.carousel.min.js"></script>
    <script src="~/autoroad/js/jquery.magnific-popup.min.js"></script>
    <script src="~/autoroad/js/aos.js"></script>
    <script src="~/autoroad/js/jquery.animateNumber.min.js"></script>
    <script src="~/autoroad/js/bootstrap-datepicker.js"></script>
    <script src="~/autoroad/js/jquery.timepicker.min.js"></script>
    <script src="~/autoroad/js/scrollax.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/autoroad/js/google-map.js"></script>
    <script src="~/autoroad/js/main.js"></script>
</body>
</html>
